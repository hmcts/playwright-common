{
  "name": "@hmcts/playwright-common",
  "description": "Common library for Playwright tests",
  "version": "1.1.2",
  "author": "HMCTS",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hmcts/playwright-common.git"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/"
  ],
  "engines": {
    "node": ">=20.11.1"
  },
  "type": "module",
  "dependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.11.1",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "axe-core": "^4.11.1",
    "axe-html-reporter": "^2.2.11",
    "eslint": "^9.11.1",
    "eslint-plugin-playwright": "^2.5.1",
    "get-port": "^7.1.0",
    "globals": "^17.3.0",
    "lighthouse": "13",
    "playwright-lighthouse": "^4.0.0",
    "ts-morph": "27",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "winston": "^3.19.0"
  },
  "peerDependencies": {
    "@playwright/test": "^1.58.0",
    "playwright-core": "^1.58.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/node": "^25.2.0",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "playwright-core": "^1.58.0",
    "vitest": "^4.0.8"
  },
  "scripts": {
    "build": "rm -rf dist && yarn tsc -p tsconfig.json",
    "build:package": "yarn build && yarn pack",
    "lint": "yarn eslint .",
    "test": "vitest run",
    "prerelease:tag": "git tag -a prerelease-$(git rev-parse --short HEAD) -m \"prerelease\"",
    "prerelease:push": "git push origin --tags",
    "prerelease": "yarn prerelease:tag && yarn prerelease:push"
  },
  "bin": {
    "delete-nightly-dev-branch": "dist/scripts/delete-nightly-dev-branch.js",
    "get-secrets": "dist/scripts/get-secrets.js"
  },
  "resolutions": {
    "glob": "^11.0.0",
    "esbuild": "^0.27.0"
  },
  "packageManager": "yarn@4.12.0"
}
