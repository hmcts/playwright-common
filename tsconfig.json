{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "ES2022",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "skipLibCheck": true,
    "useDefineForClassFields": false,
    "allowJs": true,
    "noImplicitAny": false,
    "noEmit": false,
    "outDir": "dist",
  },
  "include":["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}